# Required Environment Variables for Bitcoin Trading Bot

# Telegram Configuration (REQUIRED)
TELEGRAM_TOKEN=your_telegram_bot_token_here
ALLOWED_CHAT_IDS=your_chat_id_here

# Trading Configuration (Optional)
USE_TESTNET=true
RISK_PER_TRADE=1.0
MAX_POSITIONS=3

# Binance API (Optional - for live trading)
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET=your_binance_secret

# CoinGecko API (Optional - for fallback data)
COINGECKO_API_KEY=your_coingecko_api_key

# Encryption (Auto-generated if not provided)
ENCRYPTION_KEY=auto_generated_key